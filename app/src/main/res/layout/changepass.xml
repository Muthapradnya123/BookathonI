<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/existpass_textview"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Existing Password"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_100"/>
    <EditText
        android:id="@+id/exist_edittext"
        android:layout_marginLeft="16dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/text_black_100"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/newpass_textview"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="New Password"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_100"/>
    <EditText
        android:id="@+id/newpass_edittext"
        android:layout_marginLeft="16dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/text_black_100"
        android:autoText="false"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/confirmpass_textview"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Confirm Password"
        android:textSize="20dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_black_100"/>
    <EditText
        android:id="@+id/confirmpass_edittext"
        android:layout_marginLeft="16dp"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:textSize="16dp"
        android:textColor="@color/text_black_100"
        android:inputType="textPassword" />


</LinearLayout>