<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_postrequest"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.bookathon.post_request">

    <TextView
        android:id="@+id/pname_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pname_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:layout_toRightOf="@id/pname_textview"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pauthor_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pname_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Author"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pauthor_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pname_edittext"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/pauthor_textview"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/pedition_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pauthor_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Edition"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pedition_edittext"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pauthor_edit"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/pedition_textview"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/pcopy_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pedition_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Copies"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pcopy_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pedition_edittext"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/pcopy_textview"
        android:textSize="12sp" />
    <Button
        android:id="@+id/post_request_btn"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/pcopy_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@android:color/holo_red_dark"
        android:text="Post Request"
        android:textColor="@android:color/white" />

</RelativeLayout>
