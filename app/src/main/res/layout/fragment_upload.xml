<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/copy_textview"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Copies"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/copy_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="20sp"
        android:layout_toRightOf="@id/copy_textview"
        android:layout_alignTop="@id/copy_textview" />

    <TextView
        android:id="@+id/isbn_no"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/copy_textview"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="ISBN"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/isbn_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="15sp"
        android:hint="Click on the barcode scanner to the right"
        android:layout_alignTop="@id/isbn_no"
        android:layout_toEndOf="@id/isbn_no" />


    <ImageButton
        android:layout_width="55dp"
        android:layout_height="40dp"
        android:background="@drawable/barcode_24"
        android:id="@+id/isbn_scan"
        android:layout_alignBottom="@id/isbn_edit"
        android:layout_toEndOf="@id/isbn_edit"
        android:layout_marginStart="23dp" />

    <Button
        android:id="@+id/upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_red_dark"
        android:text="Upload"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:layout_marginTop="53dp"
        android:layout_below="@id/isbn_scan"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/desc_option"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="@string/optional"
        android:textSize="20dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/upload"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/man_upload"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Manual Upload"
        android:background="@android:color/holo_red_dark"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="115dp" />

</RelativeLayout>