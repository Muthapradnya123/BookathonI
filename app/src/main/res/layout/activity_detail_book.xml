<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context="com.android.bookathon.DetailBook">

    <ImageView
        android:id="@+id/bookimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/dbookname"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookimage"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:hint="Book Name"
        android:textAppearance="?android:textAppearanceLarge" />

    <TextView
        android:id="@+id/dtextviewauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dbookname"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Author  :"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/dauthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dtextviewauthor"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/dtextviewauthor"
        android:hint="Author"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dtextviewpublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dtextviewauthor"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Publisher :"
        android:textColor="@android:color/black"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/dpublish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dtextviewpublish"
        android:layout_below="@id/dauthor"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/dtextviewpublish"
        android:hint="Publisher"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dtextcopies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/dtextviewpublish"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Copies :"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/dcopies"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/dtextcopies"
        android:layout_alignTop="@id/dtextcopies"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@id/dtextcopies"
        android:hint="10"
        android:textColor="@android:color/black"
        android:textSize="20dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="46dp"
        android:background="@android:color/holo_red_dark"
        android:text="Chat with user"
        android:textColor="@android:color/white" />

</RelativeLayout>
