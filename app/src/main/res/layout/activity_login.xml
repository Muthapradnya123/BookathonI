<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.bookathon.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/openbook"
        android:alpha="0.6"
        />
    <TextView
        android:id="@+id/txtusr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="150dp"
        android:text="Username"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/mailtxt"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtusr"
        android:layout_alignStart="@+id/txtusr"
        android:layout_below="@+id/txtusr"
        android:hint="EmailID/Phone Number"
        android:textSize="15dp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txtpass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mailtxt"
        android:layout_marginLeft="20dp"
        android:gravity="center_horizontal"
        android:text="Password"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/passwdtxt"
        android:layout_width="295dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/txtpass"
        android:layout_alignStart="@+id/txtpass"
        android:layout_below="@+id/txtpass"
        android:hint="Password"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/passfor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/passwdtxt"
        android:layout_alignRight="@+id/passwdtxt"
        android:layout_below="@+id/passwdtxt"
        android:gravity="center"
        android:text="Forgot Password?"
        android:onClick="forgotPass"
        android:textColorHighlight="@android:color/black"/>

    <TextView
        android:id="@+id/Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:onClick="Register"
        android:text="New User? Register"
        android:textSize="15dp"
        android:layout_below="@+id/fblogin"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/Login"
        android:layout_width="170dp"
        android:layout_height="70px"
        android:layout_below="@+id/passfor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="Login"
        android:textColor="@android:color/white"
        android:textSize="10dp" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/fblogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:layout_below="@+id/Login"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
