<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload_result"
    tools:context="com.android.bookathon.Upload_Result">

    <TextView
        android:id="@+id/name_res"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Name"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/name_res_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="20sp"
        android:layout_toRightOf="@id/name_res"
        android:layout_alignTop="@id/name_res" />

    <TextView
        android:id="@+id/isbn_res"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_res"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="ISBN"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/isbn_res_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="15sp"
        android:layout_alignTop="@id/isbn_res"
        android:layout_toEndOf="@id/isbn_res" />
    <TextView
        android:id="@+id/author_res"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:layout_below="@id/isbn_res"
        android:text="Author"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/author_res_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="20sp"
        android:layout_toRightOf="@id/author_res"
        android:layout_alignTop="@id/author_res" />

    <TextView
        android:id="@+id/pub_res"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/author_res"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="Publisher"
        android:textColor="@color/text_black_100"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/pub_res_edit"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:background="@drawable/text_border_selector"
        android:textSize="15sp"
        android:layout_alignTop="@id/pub_res"
        android:layout_toEndOf="@id/pub_res" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Okay"
        android:textColor="@android:color/white"
        android:background="@android:color/holo_red_dark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
